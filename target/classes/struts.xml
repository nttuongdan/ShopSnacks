<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<package name="basicstruts2" extends="struts-default"
		strict-method-invocation="false">
		<interceptors>
			<interceptor class="Interceptor.LoginInterceptor"
				name="loginInterceptor">
			</interceptor>
			<interceptor-stack name="loginStack">
				<interceptor-ref name="loginInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>

			<interceptor class="Interceptor.AuthenticatedInterceptor"
				name="authenticatedInterceptor">
			</interceptor>

			<interceptor class="Interceptor.RoleInterceptor"
				name="roleBasedIntercetor" />
			<interceptor-stack
				name="roleBasedDefaultInterceptor">
				<interceptor-ref name="params" />
				<interceptor-ref name="roleBasedIntercetor" />
			</interceptor-stack>

		</interceptors>



		<action name="" class="Action.TrangchuAction" method="home">
			<result name="success">/WEB-INF/index.jsp</result>
		</action>

		<action name="homepage" class="Action.TrangchuAction"
			method="home">
			<result name="success">/WEB-INF/index.jsp</result>
		</action>

		<action name="blog" class="Action.TrangchuAction" method="blog">
			<result name="success">/WEB-INF/blog.jsp</result>
		</action>
		<action name="call" class="Action.TrangchuAction" method="call">
			<result name="success">/WEB-INF/call.jsp</result>
		</action>

		<action name="login">
			<interceptor-ref name="authenticatedInterceptor" />
			<result name="login">/WEB-INF/login.jsp</result>
			<result name="admin" type="redirect">homeAdminAction</result>
			<result name="khach" type="redirect">homeKhachAction</result>
		</action>

		<!-- loginUser -->
		<action name="loginUser" class="Action.LoginAction"
			method="login">
			<result name="loginfail">/WEB-INF/login.jsp</result>
			<result name="admin" type="redirect">homeAdminAction</result>
			<result name="khach" type="redirect">GioHangAction</result>
		</action>

		<!-- logoutUser -->
		<action name="logoutUser" class="Action.LoginAction"
			method="logout">
			<result name="admin">/WEB-INF/login.jsp</result>
			<result name="khach">/WEB-INF/index.jsp</result>
		</action>

		<!-- RegisterUser <action name="register" class="Action.RegisterAction" 
			method="register"> <result name="success">/registration-success.jsp</result> 
			<result name="input">/register.jsp</result> </action> -->


		<!-- homeAdminAction -->
		<action name="homeAdminAction" class="Action.AdminAction"
			method="home">
			<interceptor-ref name="loginInterceptor" />
			<interceptor-ref name="params" />
			<interceptor-ref name="roleBasedIntercetor">
				<param name="allowedRoles">admin</param>
			</interceptor-ref>
			<result name="error">/WEB-INF/error.jsp</result>
			<result name="login">/WEB-INF/login.jsp</result>
			<result name="success">/WEB-INF/admin/home.jsp</result>
		</action>

		<!-- dashboardAdminAction -->
		<action name="dashboardAdminAction" class="Action.AdminAction"
			method="dashboard">
			<interceptor-ref name="loginInterceptor" />
			<interceptor-ref name="params" />
			<interceptor-ref name="roleBasedIntercetor">
				<param name="allowedRoles">admin</param>
			</interceptor-ref>
			<result name="error">/WEB-INF/error.jsp</result>
			<result name="login">/WEB-INF/login.jsp</result>
			<result name="success">/WEB-INF/admin/dashboard.jsp</result>
		</action>


		<!--FoodAction -->
		<action name="*FoodAction" class="Action.FoodAction"
			method="{1}">

			<interceptor-ref name="fileUpload" />
			<interceptor-ref name="basicStack" />

			<interceptor-ref name="loginInterceptor" />
			<interceptor-ref name="params" />

			<interceptor-ref name="roleBasedIntercetor">
				<param name="allowedRoles">admin</param>
			</interceptor-ref>

			<interceptor-ref name="validation">
				<param name="excludeMethods">list,create,edit,delete</param>
			</interceptor-ref>
			<interceptor-ref name="workflow" />

			<result name="error">/WEB-INF/error.jsp</result>
			<result name="login">/WEB-INF/login.jsp</result>
			<result name="success">/WEB-INF/admin/food/{1}.jsp</result>
			<result name="list" type="redirect">listFoodAction</result>
			<result name="input">/WEB-INF/admin/food/{1}.jsp</result>
		</action>

		<action name="trangthaiAction" class="Action.FoodAction"
			method="trangthai">
			<interceptor-ref name="fileUpload" />
			<interceptor-ref name="basicStack" />

			<interceptor-ref name="loginInterceptor" />
			<interceptor-ref name="params" />

			<interceptor-ref name="roleBasedIntercetor">
				<param name="allowedRoles">admin</param>
			</interceptor-ref>
			<result name="error">/WEB-INF/error.jsp</result>
			<result name="login">/WEB-INF/login.jsp</result>
			<result name="list">/WEB-INF/admin/food/list.jsp</result>
			<result name="success">/WEB-INF/admin/food/list.jsp</result>


		</action>

		<action name="*TaiKhoanAction" class="Action.TaiKhoanAction"
			method="{1}">
			<interceptor-ref name="fileUpload" />
			<interceptor-ref name="basicStack" />

			<interceptor-ref name="loginInterceptor" />
			<interceptor-ref name="params" />

			<interceptor-ref name="roleBasedIntercetor">
				<param name="allowedRoles">admin</param>
			</interceptor-ref>

			<interceptor-ref name="validation">
				<param name="excludeMethods">list,create,edit,delete</param>
			</interceptor-ref>
			<interceptor-ref name="workflow" />

			<result name="error">/WEB-INF/error.jsp</result>
			<result name="login">/WEB-INF/login.jsp</result>
			<result name="success">/WEB-INF/admin/taikhoan/{1}.jsp</result>
			<result name="list" type="redirect">listTaiKhoanAction</result>
			<result name="input">/WEB-INF/admin/taikhoan/{1}.jsp</result>
		</action>

		<action name="*HoaDonAction" class="Action.HoaDonAction"
			method="{1}">
			<interceptor-ref name="fileUpload" />
			<interceptor-ref name="basicStack" />

			<interceptor-ref name="loginInterceptor" />
			<interceptor-ref name="params" />

			<interceptor-ref name="roleBasedIntercetor">
				<param name="allowedRoles">admin</param>
			</interceptor-ref>

			<interceptor-ref name="validation">
				<param name="excludeMethods">list,create,edit,delete</param>
			</interceptor-ref>
			<interceptor-ref name="workflow" />

			<result name="error">/WEB-INF/error.jsp</result>
			<result name="login">/WEB-INF/login.jsp</result>
			<result name="success">/WEB-INF/admin/hoadon/{1}.jsp</result>
			<result name="list" type="redirect">listHoaDonAction</result>
			<result name="input">/WEB-INF/admin/hoadon/{1}.jsp</result>
		</action>

		<!-- homeKhachAction -->

		<action name="SnackMoTaAction" class="Action.KhachAction"
			method="SnackMoTa">
			<result name="success">/WEB-INF/khach/datmon.jsp</result>
		</action>
		
		<action name="GioHangAction" class="Action.KhachAction"
			method="GioHang">
			<result name="success">/WEB-INF/khach/giohang.jsp</result>
		</action>

		<action name="ThemGioHangAction" class="Action.KhachAction"
			method="ThemGioHang">
			<result name="success">/WEB-INF/index.jsp</result>
		</action>

		<action name="ThemGioHangMoTaAction" class="Action.KhachAction"
			method="ThemGioHangMoTa">
			<result name="success">/WEB-INF/khach/datmon.jsp</result>
		</action>

		<action name="ThanhToanGioHangAction"
			class="Action.KhachAction" method="ThanhToanGioHang">
			<interceptor-ref name="loginStack" />
			<result name="login">/WEB-INF/login.jsp</result>
			<result name="thanhtoanthanhcong">/WEB-INF/khach/thanhtoanthanhcong.jsp</result>
		</action>

		<action name="submitOrderAction" class="Action.KhachAction"
			method="submitOrder">
			<interceptor-ref name="loginStack" />
			<result name="login">/WEB-INF/login.jsp</result>
			<result name="success" type="redirect">homeKhachAction</result>
			<result name="input">/WEB-INF/view/khach/datmon.jsp</result>
		</action>

	</package>
</struts>